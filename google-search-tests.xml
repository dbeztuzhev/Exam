        <parameter name="envURL" value="https://www.google.com/" />
        <classes>
            <class name="test.GoogleSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Firefox ru">
        <parameter name="browserType" value="Firefox"/>
        <parameter name="envURL" value="https://www.google.ru/" />
        <classes>
            <class name="test.GoogleSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Firefox ua">
        <parameter name="browserType" value="Firefox"/>
        <parameter name="envURL" value="https://www.google.com.ua/" />
        <classes>
            <class name="test.GoogleSearchTest" />
        </classes>
    </test>

</suite>