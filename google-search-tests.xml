<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Google">

    <test name="Search Tests Chrome en">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://www.google.com/" />
        <classes>
            <class name="test.GoogleSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Chrome ua">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://www.google.com.ua/" />
        <classes>
            <class name="test.GoogleSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Chrome ru">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://www.google.ru/" />
        <classes>
            <class name="test.GoogleSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Firefox en">
